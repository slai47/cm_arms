<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:layout_margin="16dp"
>

    <ImageView android:layout_width="match_parent"
               android:layout_height="250dp"
               android:id="@+id/list_feed_image"
               app:layout_constraintStart_toStartOf="parent"
    />


    <TextView
            android:text=""
            tools:text="Pocket Knives"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/PrimaryText"
            app:layout_constrainedWidth="true"
            android:id="@+id/list_feed_title"
            android:maxLines="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/list_feed_image"
            android:layout_marginTop="4dp"

    />

    <TextView
            android:text=""
            tools:text="$1337"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:id="@+id/list_feed_amount"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="4dp"
            style="@style/PrimaryText"
            android:textColor="@color/buttonText"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/shape_price_box"
            android:padding="7dp"
    />

    <TextView
            android:text=""
            tools:text="Salt Lake City"
            app:layout_constrainedWidth="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SecondaryText"
            android:id="@+id/list_feed_location"
            android:maxLines="1"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            app:layout_constraintTop_toBottomOf="@+id/list_feed_title"
            app:layout_constraintStart_toStartOf="parent"
    />

    <TextView
            android:text=""
            tools:text="Offer"
            app:layout_constrainedWidth="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/SecondaryText"
            android:id="@+id/list_feed_sale_type"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/list_feed_title"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/premium_vendor"
              android:textColor="@color/premium"
              android:visibility="invisible"
              android:textSize="12sp"
              android:id="@+id/list_feed_premium"
              android:layout_marginTop="8dp"
              tools:visibility="visible"
              app:layout_constraintTop_toBottomOf="@+id/list_feed_title"
              app:layout_constraintRight_toRightOf="parent"
              app:layout_constraintLeft_toLeftOf="parent"
    />

</androidx.constraintlayout.widget.ConstraintLayout>